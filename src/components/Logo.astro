---
import { Image } from 'astro:assets'

// Assets
import tyup from '@assets/tyup-dark.svg'

interface Props {
  name: string
  width?: number
  className?: string
  textSize?: string
  textColor?: string
}

const {
  name,
  width = 20,
  className,
  textSize = 'text-2xl',
  textColor = 'text-white'
} = Astro.props
---

<div class=`flex flex-row gap-1 items-center ${className}`>
  <Image width={width} src={tyup} alt={`Tyup ${name}`} />
  <h3 class=`${textSize} ${textColor} font-bold font-weight-[700]`>{name}</h3>
</div>
