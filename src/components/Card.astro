---
import Icon from 'astro-icon'

interface Props {
  title: string
  body: string
  leadingIcon?: ImageMetadata
  trailingIcon?: ImageMetadata
}

const { title, body, leadingIcon, trailingIcon } = Astro.props
---

<div
  class='p-6 flex flex-col border bg-secondary-black border-slate-400/20 rounded-lg'
>
  <div class='flex flex-row mb-9 justify-between'>
    <div class='flex flex-row gap-1 items-center'>
      <div class='mr-3'>
        {
          leadingIcon && (
          <Icon width={20} name={leadingIcon} />
          )
        }
      </div>
      <div>{title}</div>
    </div>
    <div>
      {
        trailingIcon && (
          <Icon width={20} name={trailingIcon} />
        )
      }
    </div>
  </div>
  <div>{body}</div>
</div>
