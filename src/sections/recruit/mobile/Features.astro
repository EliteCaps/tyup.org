---
import Icon from 'astro-icon'
import { Image } from 'astro:assets'

// Layout
import Section from '@layouts/Section.astro'

// Components
import Tweet from '@components/Tweet.astro'

import dashboard from '@assets/dashboard.svg'

// Constants
import FEATURES, {
  type IFeatureProps,
  type IFeature
} from '@constants/recruit/Features'
---

<div class='lg:hidden block'>
  {
    FEATURES.map((e: IFeatureProps) => (
      <Section>
        <div class='flex flex-col items-center mt-10'>
          <div class='flex flex-row gap-2 text-primary-blue'>
            <Icon width={15} name='check-circle-dashed' />
            <span>Automation</span>
          </div>

          <div class='mt-4'>
            <h2 class='text-4xl font-bold text-center'>{e.title}</h2>
          </div>

          <div class='my-6'>
            <p class='text-xl text-accent text-center'>{e.subtitle}</p>
          </div>

          <div class='flex flex-col gap-4'>
            {e.features.map((f: IFeature) => (
              <div class='flex flex-row gap-2'>
                <h3 class='text-2xl'>{f.title}</h3>
                <Icon width={30} name={f.leadingIcon} />
              </div>
            ))}
          </div>

          <div class='my-6'>
            <Image src={dashboard} alt='Tyup Dashboard' />
          </div>

          <div class='w-full'>
            <Tweet
              tweet={`Tyup is one of the best products I've ever used. Went from 0-100 on logging in 10 minutes. Incredible`}
              author='Khyati'
              authorHandle='hrkhyati'
            />
          </div>
        </div>
      </Section>
    ))
  }
</div>
