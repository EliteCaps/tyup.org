---
// Layout
import Section from '@layouts/Section.astro'

// Components
import Logo from '@components/Logo.astro'
import Tag from './Tag.astro'

const pathname = new URL(Astro.request.url).pathname
const currentPath = pathname.slice(1, pathname.length - 1)

interface INavLinks {
  name: string
  path: string
}

const navLinks: INavLinks[] = [
  {
    name: 'Pricing',
    path: 'pricing'
  },
  {
    name: 'Customers',
    path: 'customers'
  },
  {
    name: 'Blog',
    path: 'blog'
  },
  {
    name: 'Resources',
    path: 'resources'
  }
]
---

<Section>
  <div
    class='flex flex-row lg:justify-between justify-evenly h-10 lg:my-6 mt-2 mb-14'
  >
    {
      currentPath !== '' ? (
        <div class='lg:flex flex-row gap-1 items-center hidden'>
          <Logo logoType='light' name={currentPath} />
          <Tag text='Alpha' />
        </div>
      ) : (
        <div class='lg:block hidden' />
      )
    }
    <div
      class='flex flex-row lg:gap-8 justify-evenly lg:w-auto w-full cursor-pointer items-center'
    >
      {
        navLinks.map((navLink) => {
          return <a href={navLink.path}>{navLink.name}</a>
        })
      }
    </div>
  </div>
</Section>
