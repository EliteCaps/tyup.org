---
import Icon from 'astro-icon'

import Section from '@layouts/Section.astro'

import OutlineButton from '@components/OutlineButton.astro'

import INFOs, { type Info } from '@constants/org/Information'
---

<div class='bg-white text-black'>
  <Section>
    <div class='flex flex-col lg:flex-row'>
      {
        INFOs.map((c: Info) => (
          <>
            <div class='flex flex-col gap-4 items-center text-center mt-8 lg:p-10'>
              <Icon width={30} name={c.icon} />
              <h2 class='text-3xl font-bold'>{c.title}</h2>
              <p class='mb-2 lg:mb-8 lg:mt-6 lg:px-28'>{c.body}</p>
              <OutlineButton text={c.buttonText ?? 'Read More'} path={c.path} />
            </div>
          </>
        ))
      }
    </div>
  </Section>
</div>
